
<!-- myAlarms container -->
<div class="container myAlarms">

  <!-- myAlarms container [body] -->
  <div class="container myAlarms-body">
    <!-- myAlarms container [items]-->
    <div class= "container new-alarm-panel">

      <!--create new form-->
      <div class="form-new-alarm">
        <form class="form-inline" role="form">
          <%= form_for :alarm, url: alarms_path do |f| %>

            <div class="form-group">
            <label>I need to</label>
          </div>

          <div class="form-group select">
            <%= f.select(:alarm_type, options_for_select([ "wakeup", "sleep"], "wakeup"), {},  { :class => 'form-control' } ) %>
          </div>
          <br>
          <label >at</label>

          <div class="form-group">
            <%= f.select(:hour_time, options_for_select(('01'..'12').step(1).to_a.map{|s| ["#{s}", s]}), {},  { :class => 'form-control' } ) %> </div>
          <div class="form-group">
            <%= f.select(:minute_time, options_for_select(('01'..'60').step(1).to_a.map{|s| ["#{s}", s]}), {},  { :class => 'form-control' } ) %></div>
          <div class="form-group">
            <%= f.select(:ampm, options_for_select([ "AM", "PM" ], "AM"), {},  { :class => 'form-control' } ) %></div>
            <button class="btn btn-primary btn-calculate">Calculate times</button> 
        </form>
      <% end %>
      </div> <!-- new-alarm-panel -->
      <br>
<%= yield :script %>

    </div>
    <div class="alarms">
      <!-- alarm 1 -->
      <table class="alarm-table">
        <tbody>
        <tr>
          <td> <!-- alarm1 -->
            <div class="list-group-item alarm-item">
              <h4 class="list-group-item-heading alarm-item-time
                wakeup">6:30 am</h4>
              <p class="list-group-item-text alarm-item-title">surfing day</p> <p class="list-group-item-text alarm-item-days">
              <small>SUN <span class="day-active">MON</span> TUE
                <span class="day-active">WED</span> THU FRI SAT</small></p>
              <!-- <input type="checkbox" name="my-checkbox" checked>-->
            </div>
          </td>

        </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>
