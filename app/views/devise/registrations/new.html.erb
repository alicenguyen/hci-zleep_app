


<div class="row">
	<div class ="col-md-1"></div>
  	<div class="col-md-5">
  		<h2>Sign up</h2>

			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :role => "form") do |f| %>
				<%= devise_error_messages! %>
					<div class="row">
				 		<div class="col-xs-7"><%= f.label :first_name, "First Name" %><br />
				  			<%= f.text_field :first_name ,  :class => "form-control"%>
				  		</div>
					</div>
					<div class="row">
						<div class="col-xs-7"><%= f.label :last_name, "Last Name" %><br />
				  			<%= f.text_field :last_name,  :class => "form-control" %>
				  		</div>
					</div>
			  		<div class="row">
				  		<div class="col-xs-7"><%= f.label :email, "Email Address" %><br />
				  			<%= f.email_field :email, :autofocus => true, :class => "form-control" %>
				  		</div>
					</div>
					<div class="row">
						<div class="col-xs-7"><%= f.label :phone_number, "Phone Number" %><br />
				  			<%= f.text_field :phone_number,  :class => "form-control" %>
				  		</div>
					</div>
					<div class="row">
				  		<div class="col-xs-7"><%= f.label :password, "Password (> 7 characters)" %><br />
				  			<%= f.password_field :password, :class => "form-control"%>
				  		</div>
					</div>
				<div class="row">
			  		<div class="col-xs-7"><%= f.label :password_confirmation, "Password Confirmation" %><br />
			  			<%= f.password_field :password_confirmation, :class => "form-control"%></div>
			  		</div>
			  	<div>
			  <br><br><%= f.submit "Sign up", :class => "btn btn-primary" %></div>
			<% end %><br><br>

			Already have an account ? <%= render "devise/shared/links" %>
  	</div>
  <div class="col-md-1"><br><br><br><br><br><br>OR</div>

  <div class="col-md-3 pull-right"><br><br><br><br><br>
 	  <%= link_to image_tag("facebook_logo.png", :size=>"246x44"), user_omniauth_authorize_path(:facebook)  %>

  </div>
 	<div class ="col-md-1"></div>

  
</div>


