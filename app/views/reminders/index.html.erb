<h1>Listing reminders</h1>

<table>
  <thead>
    <tr>
      <th>Alarm</th>
      <th>User</th>
      <th>Reminder hour</th>
      <th>Reminder minute</th>
      <th>Call</th>
      <th>Sms</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.alarm_id %></td>
        <td><%= reminder.user_id %></td>
        <td><%= reminder.reminder_hour %></td>
        <td><%= reminder.reminder_minute %></td>
        <td><%= reminder.call %></td>
        <td><%= reminder.sms %></td>
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

