<script type="text/javascript">
  $(document).ready(function(){
     $('#message_id').hide();

    $('#contact_type').change(function() {
      if ($(this).val() == 1){
        console.log("THIS IS MSG");
        $('#message_id').slideDown( "fast");

      } else {
        console.log("THIS IS Phone");
        $('#message_id').slideUp( "fast");

      }
    });

  });




</script>


<div class ="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <h3> Select User </h3>
    <%= form_tag("/welcome/contact", method: "post") do %>
      
      <%= select_tag(:user_id, options_from_collection_for_select(@users, :id , :first_name), class: 'form-control' ) %>
      <h3> Select Method </h3>
        <%= select_tag(:contact_type,options_for_select([['Phone', 2], ['Sms', 1]]), class: 'form-control' ) %>


      <br>
      <div id="message_id">
        <h3> Enter message </h3>
        <%= text_area_tag 'message', nil, rows: 6, class: 'form-control' %>

        <br><br>
      </div>
      <%= submit_tag "Contact User", :class => "btn btn-primary"%>
    <% end %>  
  </div>
  <div class="col-md-4"> 

  </div>
</div>  