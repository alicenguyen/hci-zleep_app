<script type="text/javascript">
  
  $( document ).ready(function() {
    $('#signup_message').show();
    $('#login_message').hide();

});


  $(function() {
      $("#signup_button").click( function()
           {

              $('#login').html('<%= escape_javascript(render "devise/registrations/new") %>');
              $('#signup_message').hide();
              $('#login_message').show();



           }
      );

      $("#login_button").click( function()
     {

        $('#login').html('<%= escape_javascript(render "devise/sessions/new") %>');
        $('#signup_message').show();
        $('#login_message').hide();

     }
      );
});

</script>




